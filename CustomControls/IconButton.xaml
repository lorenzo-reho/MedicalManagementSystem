<UserControl x:Class="MedicalManagementSystem.CustomControls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedicalManagementSystem.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Border CornerRadius="10"
            Style="{StaticResource MenuIconBtn}">
        <StackPanel Orientation="Horizontal">
       
            <Image Width="32" Margin="6,6,0,6" Source="{Binding ImagePath,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}}}"/>

            <Button
            x:Name="customBtn"
            Content="{Binding TextButton,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}}}"
            Style="{StaticResource MenuBtn}"
            Command="{Binding Command,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}}}"
            Margin="10,0,0,0"
            />
            
        </StackPanel>
    </Border>
</UserControl>
