<UserControl x:Class="MedicalManagementSystem.View.UserManageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedicalManagementSystem.View"
             xmlns:ViewModel="clr-namespace:MedicalManagementSystem.ViewModel"
             xmlns:customcontrols="clr-namespace:MedicalManagementSystem.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <ViewModel:UserManageModel />
    </UserControl.DataContext>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        

        <Grid Grid.Row="0" Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" Grid.Column="0" Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Button Width="40">
                        <Image Source="../Images/add.png" Width="30" Height="30"/>
                    </Button>
                    <Button Width="40" Margin="10,0,0,0">
                        <Image Source="../Images/remove.png" Width="30" Height="30"/>
                    </Button>
                    <Button Width="40" Margin="10,0,0,0">
                        <Image Source="../Images/edit.png" Width="30" Height="30"/>
                    </Button>
                
                    <ToggleButton Width="40" Margin="10,0,0,0">
                        <Image Source="../Images/search1.png" Width="30" Height="30"/>

                        <ToggleButton.Triggers>
                            <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="HideStackPanel">
                                        <DoubleAnimation    
                                                Storyboard.TargetName="SearchFilterGrid"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="230" To="0"
                                                Duration="0:0:0.2">
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="ToggleButton.Checked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="ShowStackPanel">
                                        <DoubleAnimation
                                                Storyboard.TargetName="SearchFilterGrid"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="0" To="230"
                                                Duration="0:0:0.3">
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ToggleButton.Triggers>
                    </ToggleButton>

                </StackPanel>
                <!-- <TextBox Style="{StaticResource SearchField}" Width="219" Height="30" HorizontalAlignment="Right" Text="Ricerca"/> -->
            </Grid>
            <!-- TOOLBAR DI RICERCA in cui è possibile inserire qualsiasi tipo di informazione-->

            <!-- Griglia -->

            <DataGrid HorizontalScrollBarVisibility="Disabled"  Grid.Row="1" Grid.Column="0" ItemsSource="{Binding UsersList, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" ColumnWidth="*" IsReadOnly="True" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="CodiceFiscale" Binding="{Binding CodiceFiscale}"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}"/>
                    <DataGridTextColumn Header="Cognome" Binding="{Binding Cognome}"/>
                    <DataGridTextColumn Header="Residenza" Binding="{Binding Residenza}"/>
                    <DataGridTextColumn Header="Data di nascita" Binding="{Binding DataDiNascita}"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                    <DataGridTextColumn Header="Sesso" Binding="{Binding Sex}"/>

                </DataGrid.Columns>

            </DataGrid>

        </Grid>

        <Grid x:Name="SearchFilterGrid" Width="0" Grid.Row="0" Grid.Column="1" Background="#4a4a4a" Margin="4,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>

                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Ricerca" FontWeight="Bold" Foreground="#fff" FontSize="20" Margin="10"/>

            
            <Grid Grid.Row="1" Grid.Column="0">
                <DockPanel>
                    <CheckBox Margin="6,0,0,0" VerticalAlignment="Center" Command="{Binding CommandCheckCodiceFiscale}" IsChecked="{Binding IsCheckedCodiceFiscale}"/>
                    <Label VerticalAlignment="Center" Content="Codice Fiscale" Foreground="#ffffff"/>
                </DockPanel>
            </Grid>


            <TextBox Grid.Row="1" Grid.Column="1" Margin="3" Height="25" VerticalContentAlignment="Center" Text="{Binding TextCodiceFiscale}" IsEnabled="{Binding IsEnabledCodiceFiscale}"/>


            <Grid Grid.Row="2" Grid.Column="0">
                <DockPanel>
                    <CheckBox Margin="6,0,0,0" VerticalAlignment="Center" Command="{Binding CommandCheckNome}" IsChecked="{Binding IsCheckedNome}" />
                    <Label VerticalAlignment="Center" Content="Nome" Foreground="#ffffff"/>
                </DockPanel>
            </Grid>

            <TextBox Grid.Row="2" Grid.Column="1" Margin="3" Height="25" VerticalContentAlignment="Center" IsEnabled="{Binding IsEnabledNome}" Text="{Binding TextNome}"/>


            <Grid Grid.Row="3" Grid.Column="0">
                <DockPanel>
                    <CheckBox Margin="6,0,0,0" VerticalAlignment="Center" Command="{Binding CommandCheckCognome}" IsChecked="{Binding IsCheckedCognome}"/>
                    <Label VerticalAlignment="Center" Content="Cognome" Foreground="#ffffff"/>
                </DockPanel>
            </Grid>

            <TextBox Grid.Row="3" Grid.Column="1" Margin="3" Height="25" VerticalContentAlignment="Center" IsEnabled="{Binding IsEnabledCognome}" Text="{Binding TextCognome}"/>

            <Grid Grid.Row="5" Grid.Column="0">
                <DockPanel>
                    <CheckBox Margin="6,0,0,0" VerticalAlignment="Center" Command="{Binding CommandCheckResidenza}" IsChecked="{Binding IsCheckedResidenza}"/>
                    <Label VerticalAlignment="Center" Content="Residenza" Foreground="#ffffff"/>
                </DockPanel>
            </Grid>

            <TextBox Grid.Row="5" Grid.Column="1" Margin="3" Height="25" VerticalContentAlignment="Center" IsEnabled="{Binding IsEnabledResidenza}" Text="{Binding TextResidenza}"/>

            <Grid Grid.Row="6" Grid.Column="0">
                <DockPanel>
                    <CheckBox Margin="6,0,0,0" VerticalAlignment="Center" Command="{Binding CommandCheckDataDiNascita}" IsChecked="{Binding IsCheckedDataDiNascita}"/>
                    <Label VerticalAlignment="Center" Content="Data di nascita" Foreground="#ffffff"/>
                </DockPanel>
            </Grid>

            <DatePicker Grid.Row="6" Grid.Column="1" IsEnabled="{Binding IsEnabledDataDiNascita}" SelectedDate="{Binding SelectedDataDiNascita}"/>
            
            <Button Grid.Row="7" Grid.Column="0" Margin="7" Content="Rimuovi" FontSize="14" Foreground="#000" Style="{StaticResource FilterBtn}"/>
            <Button Grid.Row="7" Grid.Column="1" Margin="7" Content="Applica" FontSize="14" Foreground="#000" Style="{StaticResource FilterBtn}" Command="{Binding CommandApplicaFiltro}"/>
            
        </Grid>

    </Grid>

</UserControl>
